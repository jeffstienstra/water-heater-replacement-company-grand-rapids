---
import MagnifyingGlass from "./icons/MagnifyingGlass.astro";
import PriceReceipt from "./icons/PriceReceipt.astro";
import UserCheck from "./icons/UserCheck.astro";
import Phone from "./icons/Phone.astro";
const {
	title = "Ready to Replace Your Water Heater?",
	subtitle = "Get matched to the right model, see your price instantly, and book online — no sales pitch required." } = Astro.props;
---

<section class="py-20 px-6 bg-base-100 text-base-content border-t border-base-300">
	<div class="max-w-3xl mx-auto text-center">
		<h2 class="text-3xl sm:text-4xl font-semibold mb-4">{title}</h2>
		<p class="text-lg mb-8">{subtitle}</p>

		<div class="flex flex-col justify-center gap-4">
			<a href="tel:6165551234" class="btn btn-primary text-lg py-2 w-full max-w-xs mx-auto ">
				<Phone />
				<p>Talk to a Pro</p>
			</a>
            <a href="/instant-quote/?step=1" class="btn btn-outline text-lg w-full max-w-xs py-2 mx-auto">
                <PriceReceipt />
                <p class="">Get My Instant Quote</p>
            </a>
		</div>

		<p class="mt-6 text-sm text-gray-500">No commitment. No pressure. Just fast, timely help when you need it.</p>
	</div>
</section>

