---
// src/pages/pricing.astro
import Layout from '../layouts/Layout.astro';
import Cta from '../components/Cta.astro';
import natDraftGroup from '../assets/images/wh-natDraftGroup.png';
import powerVentGroup from '../assets/images/wh-powerVentGroup.png';
import tanklessGroup from '../assets/images/wh-tanklessGroup.png';
import hybridGroup from '../assets/images/wh-hybridGroup.png';
